<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".v1.io.output.OutputFragmentV1">

    <TextView
        android:id="@+id/v1OuputFragmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outputFragmentLabel"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/ioLabelHoriziontalPadding"
        android:paddingVertical="@dimen/ioLabelVerticalPadding"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/ioSeparatorSize"
        android:background="@color/lineSeparator"
        app:layout_constraintLeft_toRightOf="@id/v1OuputFragmentLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/v1OuputFragmentLabel"
        app:layout_constraintBottom_toBottomOf="@id/v1OuputFragmentLabel"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/v1OuputFragmentLabel"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>